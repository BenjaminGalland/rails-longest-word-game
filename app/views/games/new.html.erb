<div class="wrapper">
  <% @letters.each do |letter| %>
  <span class="letter"><%= letter %></span>
  <% end %>
</div>
<p>What is the longest word you can find?</p>
<form action="/score" method="post" data-turbo="false" class="d-flex">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word" class="form-control mx-3" id="word-input">
  <input type="hidden" id="letters-input" name="letters" value="<%= @letters.join %>"/>
  <input type="submit" class="btn btn-primary mx-3" value="Play">
</form>
